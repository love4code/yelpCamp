<% layout('../layouts/boilerplate.ejs') %>
<div class="container">
  <div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-sm-6 offset-3 mt-3">
      <form
        action="/campgrounds/<%= campground._id %>?_method=PUT"
        method="POST"
      >
        <input
          type="hidden"
          name="campground[id]"
          value="<%= campground._id %>"
        />
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            name="campground[title]"
            class="form-control"
            id="title"
            value="<%= campground.title %>"
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Campground Price</label>
          <div class="input-group">
            <span class="input-group-text">$</span>
            <input
              type="number"
              class="form-control"
              aria-label="Amount (to the nearest dollar)"
              id="price"
              name="campground[price]"
              value="<%= campground.price %>"
            />
            <!-- <span class="input-group-text">.00</span> -->
          </div>
        </div>

        <div class="form-group">
          <label for="location">Location</label>
          <input
            type="text"
            name="campground[location]"
            class="form-control"
            id="location"
            value="<%= campground.location %>"
          />
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input
            type="url"
            name="campground[image]"
            class="form-control"
            id="image"
            value="<%= campground.image %>"
          />
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea
            name="campground[description]"
            class="form-control"
            id="description"
          >
<%= campground.description %></textarea
          >
        </div>
        <button type="submit" class="btn btn-info btn-lg mt-3">
          Update Campground
        </button>
        <a href="/campgrounds/" class="btn btn-warning btn-lg mt-3">Cancle</a>
      </form>
    </div>
  </div>
</div>
